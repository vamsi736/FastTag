<Window x:Class="FastTag.Views.SelectDimensionTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Dimension Type" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Select Dimension Type:" FontWeight="Bold" />
        <ComboBox x:Name="DimensionTypeCombo" 
                  IsEditable="True"
                  Margin="0,10,0,10"
                  Height="30"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
